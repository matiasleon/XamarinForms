<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="hxTest.Views.EmployeeList">
    <StackLayout >
        <Button Clicked="Toast" HorizontalOptions="Start" Text="Notification"></Button>
        <Label  HorizontalOptions="Center" Text="Empleados de hexacta" />
        <ListView x:Name="EmployeeListView" ItemsSource="{Binding Employees}" HorizontalOptions="End">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>